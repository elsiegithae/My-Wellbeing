<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_addarticle"
    android:layout_height="match_parent"
    tools:context=".AddarticlesActivity">

    <EditText
        android:id="@+id/mEdtArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Enter article tile"
        android:textColor="#000"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/mEdtContent"
        app:layout_constraintEnd_toEndOf="@+id/mEdtContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mEdtContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="132dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Write article"
        android:textColor="#000"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtArticleTitle" />

    <Button
        android:id="@+id/mBtnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="153dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtContent" />
</androidx.constraintlayout.widget.ConstraintLayout>